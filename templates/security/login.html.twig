{% extends 'base.html.twig' %}

{% block title %}{{ 'Log in'|trans }}!{% endblock %}

{% block body %}
    <div class="form-signin m-auto d-flex justify-content-center align-items-center vh-100 bg-body-tertiary">
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    {{ 'You are logged in as'|trans }} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{ 'Please sign in'|trans }}</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans }}</div>
            {% endif %}
            <label for="username">{{ 'Email'|trans }}</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">{{ 'Password'|trans }}</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">{{ 'Remember me'|trans }}</label>
            </div>

            <div class="d-flex justify-content-center my-3">
                <button class="btn btn-lg btn-primary" type="submit">
                    {{ 'Sign in'|trans }}
                </button>
            </div>
            <div class="text-center">
                <p>{{ 'No account?'|trans }} <a href="{{ path('app_register') }}">{{ 'Register'|trans }}</a></p>
            </div>
        </form>
    </div>
{% endblock %}
